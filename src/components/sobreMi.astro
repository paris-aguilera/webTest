    font-size: 1.5rem;
    margin-bottom: 30px;
    font-weight: 600;
}
.section-description {
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
    text-align: left;
    margin-bottom: 15px;
}
.herramientas-layout {
    display: flex;
    gap: 60px;
    align-items: flex-start;
}
.herramientas-descripcion {
    flex: 1;
}
.herramientas-logos-container {
    flex: 1;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}
.herramienta-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
    transition: transform 0.3s ease;

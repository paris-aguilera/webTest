<style>
/* ... (todos los estilos anteriores se mantienen igual) ... */
.sobreMi-container {
    font-family: 'Alexandria Variable', sans-serif;
    padding: 50px 0;
    max-width: 100%;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
}
.sobreMi-card {
    width: 100%;
    border-radius: 40px;
    box-sizing: border-box;
    color: white;
    display: flex;
    background-color: rgba(23, 21, 31, 0.9);
    background-image: linear-gradient(
        to right, 
        rgba(39, 37, 51, 0.9),
        rgba(23, 21, 31, 0.9),
        rgba(39, 37, 51, 0.9)
    );
    background-size: 300% 100%; 
    animation: slow-shift 15s linear infinite;
    backdrop-filter: blur(5px); 
    -webkit-backdrop-filter: blur(5px);
}
@keyframes slow-shift {
    0% { background-position: 0% 50%; }
    100% { background-position: 100% 50%; }
}
.info-section {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 70px 40px 70px 70px; 
    flex: 3; 
    min-width: 55%; 
    box-sizing: border-box;
}
.info-section p:last-of-type {
    margin-bottom: auto;
    padding-bottom: 30px;
}
.avatar-section {
    flex: 2; 
    align-self: stretch;
    display: flex;
    justify-content: flex-end;
    align-items: stretch;
    min-width: 200px; 
}
.titulo-card {
    font-size: clamp(30px, 4vw, 50px);
    margin-bottom: 20px;
    font-weight: bold;
}
.info-section p {
    font-size: clamp(16px, 1.5vw, 20px);
    line-height: 1.6;
    margin-bottom: 15px;
}
.contacto-info {
    margin-top: 30px;
    padding-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.1); 
}
.avatar-wrapper {
    overflow: hidden;
    width: 100%; 
    max-width: none;
    height: 100%;
}
.avatar-wrapper iframe {
    width: 100%;
    height: 100%;
    border-radius: 0 40px 40px 0; 
}

/* ... (resto de los estilos sin cambios) ... */
@media (max-width: 850px) {
    .profile-avatar {
        --size: 100px; 
        transform: translate(-50%, calc(-1 * var(--size) / 2));
    }
    .sobreMi-card {
        margin-top: calc(100px / 2); 
        flex-direction: column;
        padding: 25px;
    }
    .info-section {
        padding: 0; 
        padding-top: 20px; 
        min-width: 100%; 
    }
    .info-section p:last-of-type {
        margin-bottom: 15px;
        padding-bottom: 0;
    }
    .avatar-section {
        order: -1; 
        justify-content: center; 
        margin-bottom: 30px;
        min-width: 100%;
        align-self: auto;
    }
    .avatar-wrapper {
        max-width: 250px;
        height: auto;
    }

    /* --- ‚ú® ARREGLO AQU√ç --- */
    .avatar-wrapper iframe {
        /* En m√≥vil, aplicamos un radio a todas las esquinas para que se vea bien */
        border-radius: 30px;
    }
}
.avatar-video {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover; 
    border-radius: 10px;
}
.avatar-image {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 10px;
}
/* Se fusiona el media query de 768px con el de 850px para evitar duplicados */
@media (max-width: 768px) {
    .logos-grid {
        justify-content: center; 
    }
}
.logos-grid {
    display: flex;
    gap: 15px; 
    flex-wrap: wrap; 
    margin-top: 15px;
}
.logo-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 60px;
    height: 60px;
    border-radius: 10px; 
    background-color: rgb(30, 28, 38); 
    box-shadow: 0 0 8px 2px rgba(0, 0, 0, 0.3); 
    transition: all 0.2s ease-in-out; 
    cursor: pointer;
}
.logo-wrapper:hover {
    transform: scale(1.05); 
    box-shadow: 0 0 12px 4px #4327BF; 
}
.tool-logo {
    width: 70%; 
    height: 70%;
    object-fit: contain;
    transition: all 0.2s ease-in-out;
}
</style>

<script is:inline>
document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
        root: null, 
        rootMargin: '0px 0px -100px 0px', 
        threshold: 0.05 
    };
    const sectionsToAnimate = document.querySelectorAll('.entradaDesdeIzquierda-style, .entradaDesdeDerecha-style');
    const observer = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('is-visible');
                entry.target.classList.remove('is-hidden'); 
            } else {
                entry.target.classList.remove('is-visible');
                entry.target.classList.add('is-hidden'); 
            }
        });
    }, observerOptions);
    sectionsToAnimate.forEach(section => {
        observer.observe(section);
    });
});
</script>
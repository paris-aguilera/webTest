<style>
.sobreMi-container {
    font-family: 'Alexandria Variable', sans-serif;
    padding: 80px 150px;
    margin: 0 auto;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 40px;
}

.info-section {
    color: white;
    flex: 1;
    max-width: 600px;
}

.avatar-section {
    flex-shrink: 0;
}

.avatar-wrapper {
    width: 300px;
    height: 420px;
    border-radius: 10px;
    overflow: hidden;
    position: relative;
    box-shadow: 0 0 25px rgba(0, 0, 0, 0.5);
}

.avatar-wrapper iframe {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    object-fit: cover;
}

.titulo-card {
    font-size: clamp(30px, 4vw, 50px);
    margin-bottom: 20px;
    font-weight: bold;
}
.info-section p {
    font-size: clamp(16px, 1.5vw, 20px);
    line-height: 1.6;
    margin-bottom: 15px;
}

.contacto-info {
    margin-top: 40px; 
    padding-top: 25px; 
    border-top: 1px solid rgba(255, 255, 255, 0.1); 
}

.herramientas-titulo {
    font-size: 1rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 20px; 
}

.logos-grid {
    display: flex;
    gap: 15px; 
    flex-wrap: wrap; 
}

.logo-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 55px;
    height: 60px;
    border-radius: 15px; 
    background-color: rgb(30, 28, 38); 
    box-shadow: 0 0 8px 2px rgba(0, 0, 0, 0.3); 
    transition: all 0.2s ease-in-out; 
    cursor: pointer;
}
.logo-wrapper:hover {
    transform: scale(1.55); 
}
.tool-logo {
    width: 70%; 
    height: 70%;
    object-fit: contain;
    transition: all 0.2s ease-in-out;
}

@media (max-width: 1350px) {
    .sobreMi-container {
        flex-direction: column;
        padding: 100px 20px;
    }
    .avatar-section {
        order: -1;
        /* ‚ú® CAMBIO CLAVE: Hacemos que la secci√≥n ocupe todo el ancho disponible ‚ú® */
        width: 100%;
        margin-bottom: 40px;
    }

    .avatar-wrapper {
        /* ‚ú® CAMBIO CLAVE: El wrapper tambi√©n debe ocupar el 100% de su contenedor padre ‚ú® */
        width: 100%; 
        height: 600px;
    }

    .avatar-wrapper iframe {
        width: 150%;
        height: 150%;
    }

    .info-section {
        max-width: 100%;
       
    }
   
}
@media (max-width: 450px) {
    .logo-wrapper {
        width: 38px;
        height: 55px;
    }

 
}


@media (max-width: 400px) {
    .logo-wrapper {
        width: 42px;
        height: 55px;
    }

    .sobreMi-container {

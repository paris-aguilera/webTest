		from {
			transform: translateX(0);
		}
		to {
			transform: translateX(-50%);
		}
	}
	.marquee-slider-mobile {
		overflow: hidden;
		padding-top: 20px;
		padding-bottom: 50px;
		pointer-events: none;
	}
	.marquee-wrapper {
		display: flex;
		width: max-content;
		animation: marquee 30s linear infinite;
	}
	.marquee-slider-mobile:hover .marquee-wrapper {
		animation-play-state: paused;
	}
	.marquee-slide {
		width: auto;
		margin-right: 80px;
		border-radius: 16px;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
		transition: transform 0.3s ease-in-out;
		pointer-events: auto;
	}
	.marquee-slide:hover {
		transform: scale(1.05);
		z-index: 10;

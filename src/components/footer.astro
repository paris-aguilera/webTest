</footer>

<a href="#" id="scrollTopBtn" aria-label="Volver arriba">
    <i class="fas fa-arrow-up"></i>
</a>
<style>
    /* Estilos originales del footer (sin cambios) */
    @keyframes slow-shift {
        0% { background-position: 0% 50%; }
        100% { background-position: 100% 50%; }
    }
    .main-footer {
        color: white;
        font-family: 'Alexandria Variable', sans-serif;
        box-sizing: border-box;
        width: 100vw !important;
        position: relative !important; 
        left: 50% !important;
        right: 50% !important;
        margin-left: -50vw !important; 
        margin-right: -50vw !important;
        background-color: rgba(23, 21, 31, 0.9);
        background-image: linear-gradient( to right, rgba(39, 37, 51, 0.9), rgba(23, 21, 31, 0.9), rgba(39, 37, 51, 0.9) );
        background-size: 300% 100%; 
        animation: slow-shift 15s linear infinite;
        backdrop-filter: blur(5px); 
        -webkit-backdrop-filter: blur(5px);
        border-top-left-radius: 40px; 
        border-top-right-radius: 40px;
        box-shadow: 0 -8px 15px rgba(0, 0, 0, 0.4); 
        padding-top: 80px;
        padding-bottom: 50px;
        padding-inline: 0 !important;
        margin-top: auto; 
    }
    .footer-content-wrapper {
        padding-inline: 13% !important; 
        width: 100%;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
    .footer-contact-section { margin-bottom: 25px; width: 100%; }
    .contact-text { font-size: clamp(1.5rem, 4vw, 2.5rem); font-weight: bold; margin: 0; }
    .footer-social-section { display: flex; gap: 40px; padding-top: 15px; width: 100%; justify-content: center; }
    .footer-social-section a { color: white; text-shadow: 0 0 5px rgba(255, 255, 255, 0.2); transition: all 0.3s ease-in-out; text-decoration: none; }
    .social-icon { font-size: clamp(2.5rem, 6vw, 3rem); }
    .footer-social-section a:hover { color: #4327BF; transform: scale(1.1); text-shadow: 0 0 10px #4327BF; }

    @media (max-width: 768px) {
         #scrollTopBtn {
                width: 60px !important;
                height: 60px !important;
                font-size: 30px !important; 
         }
        .main-footer { border-top-left-radius: 20px; border-top-right-radius: 20px; padding-top: 40px; padding-bottom: 40px;}
        .footer-content-wrapper { padding-inline: 5% !important; }
        .footer-social-section { gap: 25px; }
    }

    /* ===== ESTILOS AÑADIDOS PARA EL BOTÓN ===== */
    #scrollTopBtn {
        /* Posición y visibilidad */
        position: fixed; /* Clave: lo mantiene fijo en la pantalla */
        bottom: 20px;
        right: 20px;
        /*z-index: 1;  */
        
        /* Apariencia */
        background-color: #4327BF; /* Usando tu color de acento */
        color: white;
        border: none;
        border-radius: 50%; /* Lo hace circular */
        width: 80px;
        height: 80px;
        font-size: 40px;
        cursor: pointer;
        
        /* Centrado del ícono */
        display: flex;
        justify-content: center;
        align-items: center;

        /* Estado inicial (oculto) */
        opacity: 0;
        visibility: hidden;
        transform: translateY(20px); /* Efecto sutil de aparición */
        transition: opacity 0.3s, visibility 0.3s, transform 0.3s ease-in-out;
    }

    #scrollTopBtn.show {
        /* Estado visible */
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    #scrollTopBtn:hover {
        background-color: #5a3fd6; /* Un poco más claro al pasar el cursor */
        transform: scale(1.1); /* Efecto de crecimiento */
    }
    /* =========================================== */
</style>

<script>
// --- SCRIPT AÑADIDO PARA EL BOTÓN ---
// Seleccionamos el botón por su ID
const scrollTopBtn = document.getElementById('scrollTopBtn');

// Función para mostrar u ocultar el botón
const toggleScrollTopBtn = () => {
    // Si el scroll vertical es mayor a 300px
    if (window.scrollY > 300) {
        // Añadimos la clase 'show' para que aparezca
        scrollTopBtn.classList.add('show');
    } else {
        // La quitamos para que se oculte
        scrollTopBtn.classList.remove('show');
    }
};

// Función para hacer scroll suave hacia arriba
const scrollToTop = (e) => {
    // Prevenimos el comportamiento por defecto del enlace (#)
    e.preventDefault();
    // Hacemos scroll al inicio de la página con animación suave
    window.scrollTo({
        top: 0,
        behavior: 'smooth'
    });
};

// Escuchamos el evento de scroll en la ventana
window.addEventListener('scroll', toggleScrollTopBtn);

// Escuchamos el evento de click en el botón
scrollTopBtn.addEventListener('click', scrollToTop);
// --- FIN DEL SCRIPT AÑADIDO ---
</script>
		display: block;
	}

	@media (max-width: 768px) {
		.defectoSection {
			max-width: 100%;
		}
		.castiza-image {
			max-width: 100%;
		}
		.analisis-visual-section {
			flex-direction: column;
			max-width: 100%;
		}
		.mock-gallery-section {
			max-width: 100%;
		}

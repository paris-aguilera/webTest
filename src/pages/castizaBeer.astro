</section>
</Layout>

<style>
:global(body){
  background:linear-gradient(to bottom,#070401,#190102,#320303,#8F3A01)!important;
}
.fade-in-on-scroll{
  opacity:0;
  transform:translateY(30px);
  transition:opacity 0.6s ease-out,transform 0.6s ease-out;
}
.fade-in-on-scroll.is-visible{
  opacity:1;
  transform:translateY(0);
}
.defectoSection{
  font-family:'Alexandria Variable',sans-serif;
  color:white;
  text-align:left;
  padding:2rem 1rem;
  max-width:80%;
  margin:0 auto;
}
.defectoSection h2{
  font-size:clamp(2.5rem,5vw,4rem);
  margin-bottom:1rem;
}
.defectoSection h3{
  font-size:clamp(1.5rem, 4vw, 2rem);
  margin-bottom: -1rem;
  color: #ccc;
}
.defectoSection p{
  font-size:clamp(1rem,2vw,1.3rem);
  line-height:1.6;
}
.image-section{
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  padding:2rem 1rem;
}
.castiza-image{
  display:block;
  max-width:80%;
  height:auto;
  margin:0 auto;
  border-radius:15px;
}
.analisis-visual-section{
  display:flex;
  align-items:center;
  gap:2rem;
  max-width:80%;
  margin:0 auto 4rem auto;
  padding:2rem 1rem;
}
.imagen-analisis{flex:1;}
.imagen-analisis img{
  width:50%;
  height:auto;
  border-radius:15px;
  display:block;
  margin:0 auto;
}
.texto-columna {
  flex: 1;
}
.imagen-columna {
  flex: 1;
}
.imagen-columna img {
  width: 100%;
  height: auto;
  border-radius: 15px;
  display: block;
}
.imagen-analisis-fix img{
  width:50%;
  height:auto;
  border-radius:15px;
  display:block;
  justify-self: end;
}
.mock-gallery-section{
  max-width:80%;
  margin:4rem auto;
  padding:0 1rem;
  box-sizing:border-box;
}
.mock-row{
  display:flex;
  justify-content:center;
  align-items:center;
  gap:1.5rem;
  margin-bottom:1.5rem;
}
.mock-row:last-child{margin-bottom:0;}
.mock-image-wrapper{min-width:0;}
.mock-image-wrapper img{
  width:100%;
  height:auto;
  display:block;
  border-radius:15px;
}
.mock-single-image{flex:0 0 70%;}
.item-large{flex:0 1 70%;}
.item-small{flex:0 1 30%;}

.slider-section {
  width: 100vw;
  position: relative;
  margin-left: calc(50% - 50vw);
  margin-top: 2rem;
  margin-bottom: 4rem;
  box-sizing: border-box;
}

:global(.swiper) {
  --swiper-theme-color: #FFFFFF;
  --swiper-pagination-bullet-inactive-color: rgba(255, 255, 255, 0.4);
  --swiper-pagination-bullet-inactive-opacity: 1;
}
:global(.swiper-pagination-bullet) {
  background: var(--swiper-pagination-bullet-inactive-color);
  width: 10px;
  height: 10px;
}
:global(.swiper-pagination-bullet-active) {
  background: var(--swiper-theme-color);
}


.castiza-slider-web {
  width: 100%;
  padding-top: 20px;
  padding-bottom: 50px; 
}
.castiza-slider-web .swiper-slide {
  background-position: center;
  background-size: cover;
  width: auto; 
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}
.castiza-slider-web .swiper-slide picture,
.castiza-slider-web .swiper-slide img {
  display: block;
  width: auto;
  max-height: 550px; 
}
.castiza-slider-web .swiper-slide-shadow-left,
.castiza-slider-web .swiper-slide-shadow-right {
  background-image: linear-gradient(to right, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0) 100%);
}
.castiza-slider-web .swiper-slide-shadow-right {
  background-image: linear-gradient(to left, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0) 100%);
}


.castiza-slider-web-mobile {
  width: 100%;
  padding-top: 20px;
  padding-bottom: 50px; 
}
.castiza-slider-web-mobile .swiper-slide {
  background-position: center;
  background-size: cover;
  width: 90%; 
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}
.castiza-slider-web-mobile .swiper-slide img {
  display: block;
  width: 100%; 
  height: auto;
}


@keyframes marquee {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(-50%);
  }
}
.marquee-slider-mobile {
  overflow: hidden; 
  padding-top: 20px;
  padding-bottom: 50px; 
  pointer-events: none;
}
.marquee-wrapper {
  display: flex;
  width: max-content; 
  animation: marquee 30s linear infinite;
}
.marquee-slider-mobile:hover .marquee-wrapper {
  animation-play-state: paused;
}
.marquee-slide {
  width: auto; 
  margin-right: 80px; 
  border-radius: 16px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  transition: transform 0.3s ease-in-out;
  pointer-events: auto; 
}
.marquee-slide:hover {
  transform: scale(1.05); 
  z-index: 10; 
}
.marquee-slide img {
  display: block;
  width: auto; 
  height: auto;
  max-height: 450px; 
  user-drag: none; 
  -webkit-user-drag: none;
}


.show-on-mobile {
  display: none;
}
.hide-on-mobile {
  display: block;
}

@media(max-width:768px){
  .defectoSection{max-width:100%;}
  .castiza-image{max-width:100%;}
  .analisis-visual-section{flex-direction:column;max-width:100%;}
  .mock-gallery-section{max-width:100%;}
  .mock-row{flex-direction:column;align-items:center;gap:1rem;margin-bottom:1rem;}
  .mock-single-image,.item-large,.item-small{flex-basis:auto;width:100%;}
  .limit-width-mobile{max-width:224px;}
  .limit-height-mobile{width:auto;}
  .limit-height-mobile img{max-height:319px;}

  .show-on-mobile {
    display: block;
  }
  .hide-on-mobile {
    display: none;
  }

  .marquee-slide img {
     max-height: 350px; 
  }

  .castiza-slider-web-mobile .swiper-slide {
    width: 85%;
  }
  .castiza-slider-web-mobile .swiper-slide img {
    max-height: 350px;
    width: 100%;
    height: auto;
  }

  .imagen-columna img {
    width: 100%;
  }
}
</style>

<script>
import Swiper from 'swiper';
import { Pagination, EffectCoverflow } from 'swiper/modules';

document.addEventListener('DOMContentLoaded', () => {
  const observerOptions = { root: null, rootMargin: '0px', threshold: 0.1 };
  const observerCallback = (entries, observer) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
        observer.unobserve(entry.target);
      }
    });
  };
  const observer = new IntersectionObserver(observerCallback, observerOptions);
  const elementsToAnimate = document.querySelectorAll('.fade-in-on-scroll');
  elementsToAnimate.forEach(element => { observer.observe(element); });

  new Swiper('.castiza-slider-web', {
    modules: [Pagination, EffectCoverflow],
    effect: 'coverflow',
    grabCursor: true,
    centeredSlides: true,
    loop: true,
    slidesPerView: 'auto', 
    coverflowEffect: {
      rotate: 40,
      stretch: 0,
      depth: 100,
      modifier: 1,
      slideShadows: true,
    },
    pagination: {
      el: '.castiza-slider-web .swiper-pagination',
      clickable: true,
    },
  });

  new Swiper('.castiza-slider-web-mobile', {
    modules: [Pagination],
    effect: 'slide',
    loop: true,
    grabCursor: true,
    centeredSlides: true,
    slidesPerView: 'auto',
    spaceBetween: 30,
    pagination: {
      el: '.castiza-slider-web-mobile .swiper-pagination',
      clickable: true,
    },
  });
});
</script>